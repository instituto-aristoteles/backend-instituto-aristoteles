generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id          String    @id @default(uuid())
  title       String
  description String
  poststatus  Int
  createdbyid String
  updatedbyid String?
  createdby   User      @relation("postcreated", fields: [createdbyid], references: [id])
  updatedby   User?     @relation("postupdated", fields: [updatedbyid], references: [id])
  createdat   DateTime  @default(now())
  updatedat   DateTime? @updatedAt()
}

model User {
  id           String    @id @default(uuid())
  name         String
  email        String    @unique
  password     String
  refreshToken String
  postcreated  Post[]    @relation("postcreated")
  postupdated  Post[]    @relation("postupdated")
  createdat    DateTime  @default(now())
  updatedat    DateTime? @updatedAt
}
